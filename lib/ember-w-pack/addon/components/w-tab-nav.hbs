<div class="tab-nav-underline w-100 px-4 justify-content-start t-align-c {{tabClass}}">
  {{#each @tabs as |tab index|}}
    <div class="tab px-0 mr-md-5 mr-sm-4 mr-3 font-sm bold {{if (eq tab @activeTab) 'active'}}" {{action @onTabChange tab}}>{{tab.name}}</div>
  {{/each}}
</div>
<div class="p-4">
  {{yield}}
</div>
