<div>
  <h2>Challenges</h2>
</div>

<div class="d-flex mt-4 align-items-center">
  <div class="col-12 col-md-2">
    <label class="font-sm">Challenge Name</label>
  </div>
  <div class="col-12 col-md-8">
    <PowerSelect
      @searchEnabled={{true}}
      @options={{challenges}}
      @search={{perform fetchChallengesTask}}
      @selected={{selectedChallenge}}
      @onChange={{action (mut selectedChallenge)}} as |challenge|>
      {{challenge.name}}
    </PowerSelect>
  </div>
  <div class="d-flex col-12 col-md-2 justify-content-center">
    <button class="button button-solid" {{action (perform saveContents)}}>
      {{if saveContents.isRunning "Adding" "Add"}}
    </button>
  </div>
</div>

<div class="row mt-4 justify-content-center">
  <div class="col-12 col-md-8">
    <table class="w-100">
      <thead class="font-sm extra-bold">
        <td class="pb-4 t-align-c w-10">#</td>
        <td class="pb-4 t-align-c">Name</td>
        <td class="pb-4 t-align-c">Actions</td>
      </thead>
      <tbody>
        {{#each @contest.contents as |content i|}}
          <tr>
            <td class="pb-4 t-align-c">{{i}}</td>
            <td class="pb-4">{{content.name}}</td>
            <td class="pb-4 t-align-c"></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
